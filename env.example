# Solana Monitoring Agent Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file!

# CRITICAL: This MUST match the RPC port on THIS specific node
# Test with: solana --url http://localhost:<port> cluster-version
# Common ports: 8899 (default), 9887, 8900
LOCAL_RPC_PORT=8899

# Reference RPC endpoints for comparison
# Get a free API key from https://helius.dev
HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY_HERE
PUBLIC_RPC_URL=https://api.mainnet-beta.solana.com

# This node's identifier (will appear in metrics and dashboard)
NODE_NAME=my-validator

# Port to expose metrics on (Prometheus format)
METRICS_PORT=9100

# How often to check slot lag (seconds)
CHECK_INTERVAL=30

# PUSH MODE: Send metrics to monitoring server (optional)
# If enabled, agent will push metrics instead of waiting to be scraped
ENABLE_PUSH_MODE=true
MONITORING_API_URL=https://monitoring.example.com/api/metrics/ingest
MONITORING_API_KEY=your-api-key-here
PUSH_RETRY_ATTEMPTS=3
